<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#b3b3b3" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <!-- 此处定义只有上边有边框 高度为1像素-->
    <item
        android:bottom="1dp">
        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>