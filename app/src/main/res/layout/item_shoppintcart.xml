<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#efeff4"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="#ffffff"
        >
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_shopcheck"
        android:button="@null"
        android:checked="false"
        android:focusable="false"
        android:drawableLeft="@drawable/checkbox_selector"
        android:text="碧螺春"
        android:drawablePadding="8dp"
        android:textColor="#333333"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/tv_edit_shop"
         android:text="编辑"
         android:textColor="#333333"
         android:layout_alignParentRight="true"
         android:layout_marginTop="10dp"
         android:layout_marginRight="10dp"
         />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_shopImg"
        android:src="@mipmap/collection"
        android:layout_below="@+id/cb_shopcheck"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_describe"
        android:text="碧螺春碧螺春碧螺春碧螺春碧螺春碧螺春碧螺春碧螺春碧螺春"
        android:singleLine="true"
        android:layout_below="@+id/cb_shopcheck"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_shopImg"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:textColor="#333333"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_price"
        android:layout_below="@+id/tv_product_describe"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_shopImg"
        android:text="￥98"
        android:layout_marginLeft="8dp"
        android:textColor="#f58661"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—"
            android:id="@+id/tv_jianProduct"
            android:textSize="20sp"
            android:layout_below="@+id/tv_product_describe"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_shopImg"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_singleNum"
            android:layout_below="@+id/tv_product_describe"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_jianProduct"
            android:layout_marginLeft="60dp"
            android:text="2"
            android:visibility="gone"
            android:textSize="18sp"
            />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/tv_singleNum1"
         android:layout_below="@+id/tv_product_describe"
         android:layout_marginTop="15dp"
         android:layout_toRightOf="@+id/tv_jianProduct"
         android:layout_marginLeft="120dp"
         android:text="2"
         android:textSize="18sp"
         android:visibility="gone"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/tv_addProduct"
            android:textSize="22sp"
            android:layout_below="@+id/tv_product_describe"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_singleNum"
            android:layout_marginLeft="60dp"
            android:visibility="gone"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/tv_addProduct1"
        android:textSize="22sp"
        android:layout_below="@+id/tv_product_describe"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_productNum"
        android:layout_below="@+id/tv_product_describe"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="x1"
        android:textColor="#333333"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:background="#d83231"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="删除"
        android:textColor="#ffffff"
        android:gravity="center"
        android:visibility="gone"
        />
    </RelativeLayout>
</RelativeLayout>
