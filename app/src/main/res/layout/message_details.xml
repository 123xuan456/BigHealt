<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/tit"
        layout="@layout/footer_tab_2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问题描述"
        android:textSize="20sp"
        android:textColor="#323232"
        android:id="@+id/textView6" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-05-06"
        android:textColor="#323232"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="最近感冒头疼的厉害。。。。打算爱上打算打打捱三顶五"
        android:textSize="20sp"
        android:textColor="#323232"
        android:layout_marginTop="5dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />
    
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"
        android:layout_above="@+id/listview"
        android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想要得到的帮助？"
            android:textSize="20sp"
            android:textColor="#323232"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:id="@+id/textView44" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="sfdghfdsfghjkdsarfdasdddddddddddddddddddddddt"
            android:textSize="20sp"
            android:textColor="#323232"
            android:id="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView44" />


    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10">

    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textView8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="追问"
            android:background="#ffbd8b"
            android:textSize="20sp"
            android:id="@+id/textView8" />
    </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
