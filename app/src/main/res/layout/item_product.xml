<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="碧鉴春茶叶"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:textColor="#333333"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="#f0eff5"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="#333333"
            android:layout_marginStart="20dp"
            android:id="@+id/iv_product" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016正宗想不出V不想吃女超级打过和女女不想参加"
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_alignTop="@+id/iv_product"
            android:layout_toEndOf="@+id/iv_product"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:lines="3"
            android:id="@+id/tv_product_tit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100"
            android:textColor="#fc8266"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/iv_product"
            android:layout_alignStart="@+id/tv_product_tit"
            android:id="@+id/price" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_alignBottom="@+id/price"
            android:layout_alignEnd="@+id/tv_product_tit" />
        
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:textSize="22sp"
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/jia"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/jia" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#333333"
            android:textSize="22sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/jia"
            android:layout_toStartOf="@+id/jia" />

        <ImageView
            android:id="@+id/jian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:src="@drawable/jian"
            android:layout_alignTop="@+id/jia"
            android:layout_toStartOf="@+id/num" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e1e1e1"/>
</LinearLayout>
