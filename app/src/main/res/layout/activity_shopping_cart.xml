<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    tools:context="dbighealth.bighealth.activity.ShoppingCartActivity">
   <include
       layout="@layout/footer_tab_2"
       android:id="@+id/layout_shopcart_title"
       />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_shopcart_title"
        android:layout_above="@+id/layout_shopcart_footer"
        android:id="@+id/lv_shopcart"
        android:divider="@null"
        >
    </ListView>
    <include
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:id="@+id/layout_shopcart_footer"
       layout="@layout/layout_footer_shopcart"
       android:layout_alignParentBottom="true"
       />
</RelativeLayout>
