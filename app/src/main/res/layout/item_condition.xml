                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView44"
                android:layout_marginStart="5dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
