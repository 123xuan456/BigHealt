<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小王"
            android:id="@+id/textView62"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13716276410"
            android:id="@+id/textView63"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市朝阳区工人体育馆"
        android:id="@+id/textView64" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/biankuang_top"
        >


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  设置默认"
            android:textSize="12sp"
            android:textColor="#646464"
            android:id="@+id/radioButton2"
            android:button="@drawable/radiobutton_yuan"
            android:checked="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  编辑"
            android:textSize="12sp"
            android:textColor="#646464"
            android:drawableLeft="@drawable/notepod"
            android:id="@+id/textView65"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView66" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  删除"
            android:textSize="12sp"
            android:textColor="#646464"
            android:drawableLeft="@drawable/trash"
            android:id="@+id/textView66"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>