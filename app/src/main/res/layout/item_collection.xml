<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="#efeff4"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#ffffff"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_collecion"
            android:button="@null"
            android:checked="false"
            android:focusable="false"
            android:background="@drawable/checkbox_selector"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/rcv_collectionPic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/cb_collecion"
        android:layout_marginLeft="20dp"
        fresco:roundAsCircle="false"
        fresco:roundedCornerRadius="5dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/collection"
        fresco:roundingBorderWidth="1dp"
        fresco:placeholderImageScaleType="fitCenter"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_collectionTitle"
        android:text="糖尿病自然疗法"
        android:textColor="#333333"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/rcv_collectionPic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_collectionDate"
        android:text="3小时前"
        android:textColor="#b6b6b6"
        android:layout_toRightOf="@+id/rcv_collectionPic"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_collectionStar"
        android:src="@mipmap/starcollection"
        android:layout_marginLeft="220dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_collectionCount"
        android:text="847"
        android:textColor="#b6b6b6"
        android:layout_toRightOf="@+id/iv_collectionStar"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />
    </RelativeLayout>
</LinearLayout>
